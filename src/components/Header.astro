---
import { Image } from 'astro:assets';

import { SITE_TITLE } from '../config';

import { HEADER_BACKGROUND, LOGO } from '../assets';
---

<header class="header">
	<Image
		class="header__background"
		src={HEADER_BACKGROUND}
		alt="header background image"
	/>

	<div class="header__logo">
		<Image
			class="header__logo__image"
			src={LOGO}
			alt={SITE_TITLE}
		/>
	</div>

	<h1 class="header__title sr-only">{SITE_TITLE}</h1>
</header>

<style lang="scss">
	@use 'sass:map';
	@use '../styles/breakpoints';

	.header {
		--header-height: 300px;

		width: 100%;
		height: var(--header-height);
		overflow: hidden;
		position: relative;

		border-bottom: 1px solid rgb(0 0 0 / 10%);

		&__background {
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0;

			object-fit: cover;
		}

		&__logo {
			position: relative;
			width: 100%;
			height: 100%;

			display: flex;
			align-items: center;
			justify-content: center;

			padding: 0 16px;
		}

		@media screen and (max-width: map.get(breakpoints.$breakpoint, 'md')) {
			--header-height: 200px;
		}

		@media screen and (max-width: map.get(breakpoints.$breakpoint, 'sm')) {
			--header-height: 100px;
		}
	}
</style>
